          xmlns="http://www.w3.org/1999/html">

    <!-- Flatpickr JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
    <br>
    <div class="container3">
        <div class="card">
            <div class="d-flex justify-content-center align-items-center">
                <h1>Ajouter un nouvel élément</h1>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col">
            <div class="container4">
                <div class="text-center">
                    <div class="card card1">
                        <!--suppress ALL -->
                        <br>
                        <div class="row">

                            <div class="col-md-6 mx-auto">
                                <div class="row">
                                    <div class="col-md-6">

                                        <div class="form-group">

                                            {{ form_label(form.titre, 'Titre') }}
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            {{ form_label(form.description, 'Description') }}
                                        </div>
                                        <br> <br> <br>
                                        <div class="form-group">
                                            {{ form_label(form.prixinitial, 'Prix initial') }}
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            {{ form_label(form.dateFin, 'Date final') }}
                                        </div>
                                    </div>
                                    <br>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.titre) }}
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.description) }}
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            {{ form_widget(form.prixinitial, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                                            {{ form_errors(form.prixinitial) }}
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.dateFin) }}
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="text-center d-flex justify-content-center">
                                            {{ form_row(form.save, {'attr': {'class': 'btn btn-primary mr-4', 'id': 'submit-button'}}) }}
                                            <a href="{{ path('app_appelsoffres_index') }}"
                                               class="btn btn-warning ml-4">Retour
                                                à la liste</a>
                                        </div>
                                        <br>
                                        <br>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="container3">
                <div class="card card2">
                    <div class="form-group text-center">
                        <h1>Table de stocks</h1>
                    </div>
                    <div class="text-center">
                        <div class="container2">
                            <div class="tbl-header">
                                <table>
                                    <thead>
                                    <tr>
                                        <th>Type
                                            <!-- Bouton de tri -->
                                            <button class="sort-btn" data-col="1" data-order="asc">▲</button>
                                        </th>
                                        <th>Nom
                                        </th>
                                        <th>Prix unit
                                            <!-- Bouton de tri -->
                                            <button class="sort-btn" data-col="3" data-order="asc">▲</button>
                                        </th>
                                        <th>Quantite
                                            <!-- Bouton de tri -->
                                            <button class="sort-btn" data-col="4" data-order="asc">▲</button>
                                        </th>
                                        <th>Un</th>

                                    </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="tbl-content">
                                <table cellpadding="0" cellspacing="0" border="0">
                                    <tbody>
                                    {% for stock in stockList %}
                                        <tr>
                                            <td>
                                                <label>
                                                    <input type="checkbox" class="stock-checkbox"
                                                           data-prix="{{ stock.prixunit }}"
                                                           data-quantite="{{ stock.quantite }}"
                                                           data-stock="{{ stock|json_encode|e }}">
                                                </label>
                                            </td>
                                            <td>{{ stock.type }}</td>
                                            <td>{{ stock.nom }}</td>
                                            <td>{{ stock.prixunit }}</td>
                                            <td>{{ stock.quantite }}</td>
                                            <td>{{ stock.unite }}</td>

                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">No records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>

        /* Custom CSS */
        .btn-custom {
            background-color: #c2fbd7;
            border-radius: 100px;
            box-shadow: rgba(44, 187, 99, .2) 0 -25px 18px -14px inset, rgba(44, 187, 99, .15) 0 1px 2px, rgba(44, 187, 99, .15) 0 2px 4px, rgba(44, 187, 99, .15) 0 4px 8px, rgba(44, 187, 99, .15) 0 8px 16px, rgba(44, 187, 99, .15) 0 16px 32px;
            color: green;
            cursor: pointer;
            display: inline-block;
            font-family: CerebriSans-Regular, -apple-system, system-ui, Roboto, sans-serif;
            padding: 7px 20px;
            text-align: center;
            text-decoration: none;
            transition: all 250ms;
            border: 0;
            font-size: 16px;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
        }


        .btn-custom:hover {
            box-shadow: rgba(44, 187, 99, .35) 0 -25px 18px -14px inset, rgba(44, 187, 99, .25) 0 1px 2px, rgba(44, 187, 99, .25) 0 2px 4px, rgba(44, 187, 99, .25) 0 4px 8px, rgba(44, 187, 99, .25) 0 8px 16px, rgba(44, 187, 99, .25) 0 16px 32px;
            transform: scale(1.05) rotate(-1deg);
        }


        .container3 {
            display: flex;
            justify-content: center; /* Centrer horizontalement */
            align-items: center; /* Centrer verticalement */
            height: auto; /* Assurez-vous que le conteneur parent occupe toute la hauteur de la fenêtre */

        }

        .container2 {
            justify-content: center; /* Centrer horizontalement */
            align-items: center; /* Centrer verticalement */
            height: auto; /* Assurez-vous que le conteneur parent occupe toute la hauteur de la fenêtre */
            margin: 12px; /* Espacement autour du conteneur */
        }

        .container4 {

            height: 800px; /* Assurez-vous que le conteneur parent occupe toute la hauteur de la fenêtre */
            width: 800px;

        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 80%;
        }

        .card1 {
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;

            height: 100%;
        }

        .card2 {
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;

        }

        table {
            width: 100%;
            table-layout: fixed;
        }

        .tbl-header {
            background-color: #03A63C;
        }

        .tbl-content {
            height: 300px;
            overflow-x: auto;
            margin-top: 0;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        th {
            white-space: nowrap; /* Empêcher le texte de se répartir sur plusieurs lignes */
            padding: 20px 15px;
            font-weight: 500;
            font-size: 12px;
            background-color: #03A63C;
            color: white;
            text-align: center; /* Aligner le texte à gauche */
            text-transform: uppercase;

        }

        td {

            white-space: nowrap; /* Empêcher le texte de se répartir sur plusieurs lignes */
            padding: 15px;
            text-align: left;
            vertical-align: middle;
            font-weight: 300;
            font-size: 12px;
            border-bottom: solid 1px rgb(5, 112, 119);
        }

        .tbl-content tr:hover {
            background-color: #e0e0e0;
        }

        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
        }

        ::-webkit-scrollbar-thumb {
            -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sortButtons = document.querySelectorAll('.sort-btn');

            sortButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const column = parseInt(this.getAttribute('data-col'));
                    const order = this.getAttribute('data-order');

                    // Mettre à jour le sens du tri
                    const newOrder = order === 'asc' ? 'desc' : 'asc';
                    this.setAttribute('data-order', newOrder);

                    // Modifier le texte du bouton pour refléter le sens du tri
                    const arrow = newOrder === 'asc' ? '▲' : '▼';
                    this.textContent = this.textContent.replace(/[▲▼]/g, '') + arrow;

                    // Trier le tableau en fonction de la colonne et du sens du tri
                    sortTable(column, newOrder);
                });
            });

            function sortTable(column, order) {
                const table = document.querySelector('.tbl-content table');
                const rows = Array.from(table.querySelectorAll('tbody tr'));

                rows.sort((rowA, rowB) => {
                    const cellA = rowA.querySelectorAll('td')[column - 1].textContent;
                    const cellB = rowB.querySelectorAll('td')[column - 1].textContent;

                    if (order === 'asc') {
                        return cellA.localeCompare(cellB);
                    } else {
                        return cellB.localeCompare(cellA);
                    }
                });

                // Réorganiser les lignes dans le tableau selon le nouveau tri
                const tbody = table.querySelector('tbody');
                tbody.innerHTML = '';
                rows.forEach(row => tbody.appendChild(row));
            }
        });

        document.addEventListener("DOMContentLoaded", function () {
            const checkboxes = document.querySelectorAll('.stock-checkbox');
            const prixInitialInput = document.getElementById('{{ form.prixinitial.vars.id }}');
            const selectedStocks = [];
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateTotalAmount);
            });
            function updateTotalAmount() {
                let totalAmount = 0;

                checkboxes.forEach(checkbox => {
                    if (checkbox.checked) {

                        const prix = parseFloat(checkbox.getAttribute('data-prix'));
                        const quantite = parseFloat(checkbox.getAttribute('data-quantite'));
                        totalAmount += prix * quantite;
                    }
                });

                prixInitialInput.value = totalAmount.toFixed(2); // Mettez à jour le champ de montant initial
            }

            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function () {
                    const stockId = this.value;
                    if (this.checked && !selectedStocks.includes(stockId)) {
                        selectedStocks.push(stockId);
                    } else if (!this.checked && selectedStocks.includes(stockId)) {
                        selectedStocks.splice(selectedStocks.indexOf(stockId), 1);
                    }
                });
            });

            const submitButton = document.getElementById('submit-button');
            submitButton.addEventListener('click', function () {
                // Créer un formulaire invisible
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '{{ path('app_appelsoffres_new') }}';
                form.style.display = 'none';

                // Ajouter un champ pour les stocks sélectionnés
                const stocksInput = document.createElement('input');
                stocksInput.type = 'hidden';
                stocksInput.name = 'stocks';
                stocksInput.value = JSON.stringify(selectedStocks);
                form.appendChild(stocksInput);

                // Ajouter le formulaire à la page et le soumettre
                document.body.appendChild(form);
                form.submit();
            });

        });


    </script>


{% endblock %}
