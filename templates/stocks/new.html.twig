{% extends './FrontTemplate.html.twig' %}

{% block title %}Ajouter un nouvel élément{% endblock %}
{% block body %}
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
    <!--suppress ALL -->
    <div class="container">
        <h1 class="my-4 text-center">Ajouter un nouvel élément</h1>
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="col-md-6">
                    {{ form_label(form.user, 'user') }}
                    {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.user) }}
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        {{ form_label(form.type, 'Type') }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.type) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.nom, 'Nom') }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.description) }}
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        {{ form_label(form.prixUnit, 'Prix unitaire') }}
                        {{ form_widget(form.prixUnit, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.prixUnit) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.quantite, 'Quantité') }}
                        {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.quantite) }}
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        {{ form_label(form.unite, 'Unité') }}
                        {{ form_widget(form.unite, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.unite) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.imageFile, 'image') }}
                        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.imageFile) }}
                    </div>
                </div>
                <br>
                <br>
                <div class="row">
                    <div class="col-md-12">
                        <div class="text-center d-flex justify-content-center">
                            {{ form_row(form.save, {'attr': {'class': 'btn btn-primary mr-4'}}) }}
                            <a href="{{ path('app_stocks_index') }}" class="btn btn-warning ml-4">Retour à la liste</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
