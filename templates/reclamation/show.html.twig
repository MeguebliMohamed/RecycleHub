            </tr>

        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_reclamation_indexFront') }}">back to list</a>

    <a class="btn btn-info" href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>

