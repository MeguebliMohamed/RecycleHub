{% extends 'FrontTemplate2.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0-alpha1/css/bootstrap.min.css"> <link rel="stylesheet" href="{{ asset('css/style.css') }}"> {% endblock %}
{% block title %}Modifier Profile{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-center mt-5 display-4">Modifier Profile</h1>
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="username">Username</label>
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="plainPassword">Mot de passe</label>
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="prenom">Prenom</label>
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="adresse">Adresse</label>
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="cin">Cin</label>
                    {{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="telephone">Telephone</label>
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="nom">Nom</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                {{ form_end(form) }}
            </div>
            {#
            <div class="col-md-6">
                <img src="{{ asset('uploads/profile/' ~ user.image) }}" alt="Profile Image" class="img-fluid">
            </div>
            #}
        </div>
    </div>
{% endblock %}