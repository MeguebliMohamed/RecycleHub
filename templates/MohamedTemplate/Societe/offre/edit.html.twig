
{% extends './FrontTemplate2.html.twig' %}

{% block body %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="container">
        <h1 class="my-4 text-center">Editer Offre</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <h3>l'utilisateur : {{ offre.user }}</h3>
                </div>
                <div class="form-group">
                    <h3>Appel Offre   : {{ offre.appelOffre }}</h3>
                </div>
                <div class="form-group">
                    {{ form_label(form.dateSoumission, 'Date de soumission') }}
                    {{ form_widget(form.dateSoumission, {'attr': {'class': 'form-control', 'disabled': 'disabled'}}) }}
                    {{ form_errors(form.dateSoumission) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.description) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.montant, 'Montant') }}
                    {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.montant) }}
                </div>
                <div class="form-group text-center">
                    <div class="btn-group" role="group" aria-label="Actions">
                        {{ form_row(form.update, {'attr': {'class': 'btn btn-primary'}}) }}
                        <a href="{{ path('app_offre_index') }}" class="btn btn-warning ml-2">Retour Ã  la liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
