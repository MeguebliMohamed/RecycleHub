{% extends './FrontTemplate.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier le profil</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Modifier le profil</div>

                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="form-group row">
                            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'col-md-4 col-form-label text-md-right'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(form.prenom, 'Pr√©nom', {'label_attr': {'class': 'col-md-4 col-form-label text-md-right'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'col-md-4 col-form-label text-md-right'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.adresse) }}
                            </div>
                        </div>


                        <div class="form-group row mb-0">
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Enregistrer les modifications
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
