{% extends './FrontTemplate.html.twig' %}

{% block title %}Cadeaux{% endblock %}

{% block body %}
    <h1>Cadeaux</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cadeaux.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cadeaux.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cadeaux.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ cadeaux.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ cadeaux.stock }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ cadeaux.disponible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateDisponibilite</th>
                <td>{{ cadeaux.dateDisponibilite ? cadeaux.dateDisponibilite|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ cadeaux.categorie }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ cadeaux.imageUrl }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cadeaux_index') }}">back to list</a>

    <a href="{{ path('app_cadeaux_edit', {'id': cadeaux.id}) }}">edit</a>

    {{ include('cadeaux/_delete_form.html.twig') }}
{% endblock %}
