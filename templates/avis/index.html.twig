{% extends './BackEndTemplate.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block content %}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Avis /</span> Display</h4>
<div class="card">
    <div class="table-responsive text-nowrap">
    <table class="table">
        <thead>
            <tr>
                <th>Note</th>
                <th>Avi</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0" >
        {% for avi in avis %}
            <tr>
                <td>{{ avi.note }}</td>
                <td>{{ avi.avi }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
    </div>
</div>

{% endblock %}
