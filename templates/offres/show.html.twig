{% extends './FrontTemplate.html.twig' %}

{% block title %}Offres{% endblock %}

{% block body %}
    <h1>Offres</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Idoffre</th>
            <td>{{ offre.idoffre }}</td>
        </tr>
        <tr>
            <th>Montant</th>
            <td>{{ offre.montant }}</td>
        </tr>
        <tr>
            <th>Datesoumission</th>
            <td>{{ offre.datesoumission ? offre.datesoumission|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ offre.description }}</td>
        </tr>
        <tr>
            <th>Etat</th>
            <td>{{ offre.etat }}</td>
        </tr>
        <tr>
            <th>Etatpayment</th>
            <td>{{ offre.etatpayment }}</td>
        </tr>
        <tr>
            <th>Datepayment</th>
            <td>{{ offre.datepayment ? offre.datepayment|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_offres_index') }}">back to list</a>

    <a href="{{ path('app_offres_edit', {'idoffre': offre.idoffre}) }}">edit</a>

    {{ include('offres/_delete_form.html.twig') }}
{% endblock %}
