{% extends 'FrontTemplate.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container mt-4">
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="card mx-auto" style="max-width: 400px;">
            <div class="card-header">
                <h5 class="card-title text-center">Réinitialiser votre mot de passe</h5>
            </div>
            <div class="card-body">
                {{ form_start(requestForm) }}
                <div class="form-group">
                    {{ form_label(requestForm.email, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                    <small class="form-text text-muted">
                        Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </small>
                </div>
                <div class="form-group">
                    <div class="g-recaptcha" data-sitekey="6LfxDsEpAAAAAHLhK6H22Gj0zvfXCT2EgcPbpG7U"></div>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Envoyer l'e-mail de réinitialisation du mot de passe</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
