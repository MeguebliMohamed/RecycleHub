{% extends './stock/StockFrontTemplate.html.twig' %}

{% block title %}Ajouter un nouvel élément{% endblock %}
{% block body %}
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
    <div class="container">
        <h1 class="my-4 text-center">Ajouter un nouvel élément</h1>
        <div class="row">
            <div class="col-md-6 mx-auto">



                    <div class="form-group row">
                        <div class="col-md-6">
                            {{ form_label(form.type, 'Type') }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.type) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.nom, 'Nom') }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            {{ form_label(form.prixunit, 'Prix unitaire') }}
                            {{ form_widget(form.prixunit, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.prixunit) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.quantite, 'Quantité') }}
                            {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.quantite) }}
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            {{ form_label(form.unite, 'Unité') }}
                            {{ form_widget(form.unite, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.unite) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.imageurl, 'URL de l\'image') }}
                            {{ form_widget(form.imageurl, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.imageurl) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <div class="form-group text-center" >
                                {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group text-center">
                                <a href="{{ path('app_stock_index') }}" class="btn btn-primary">Retour à la liste</a>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
