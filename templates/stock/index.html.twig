{% extends './FrontTemplate.html.twig' %}

{% block title %}Table de stocks{% endblock %}
{% block css %}
    <link rel="preconnect" href="https://fonts.gstatic.com">
{% endblock %}
{% block body %}
<br><br>

<!DOCTYPE html>
<html lang="fr">
<div class="container2">
    <div class="card">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <br>
            <div class="form-group text-center">
                <h1>Table de stocks</h1>
            </div>
            <br>
            <div class="container3">
                <div class="form-group text-center">
                    <table class="table table-striped custom-table">{# Ajoutez la classe custom-table ici #}

                        <thead>
                        <tr>
                            <th></th>
                            <th>Type</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Prix unit</th>
                            <th>Quantite</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for stock in stocks %}
                            <tr>
                                <td>
                                    <img src="{{ vich_uploader_asset(stock, 'imageFile') }}" width="50" height="50" alt="Image">
                                </td>
                                <td>{{ stock.type }}</td>
                                <td>{{ stock.nom }}</td>
                                <td>{{ stock.description }}</td>
                                <td>{{ stock.prixunit }}</td>
                                <td>{{ stock.quantite }} {{ stock.unite }}</td>
                                <td>
                                    <a href="{{ path('app_stock_edit', {'id': stock.id}) }}" class="button-with-image" title="Modifier">
                                        <img src="/mohamed_Css/img/edit.png" style="width: 40px; height: 35px;">
                                    </a>


                                    <a href="{{ path('app_stock_show', {'id': stock.id}) }}" class="button-with-image" title="Info">
                                        <img src="/mohamed_Css/img/information.png" style="width: 40px; height: 35px;">
                                    </a>
                                    <a href="#" onclick="confirmDeleting(event, '{{ path('app_stock_delete', {'id': stock.id}) }}', '{{ csrf_token('delete' ~ stock.id) }}')" class="button-with-image" title="Delete">
                                        <img src="/mohamed_Css/img/bin.png" style="width: 40px; height: 35px;" alt="Delete">
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="12">No records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div> {# Fin de la div .page-container #}
            </div>
            <br>

            <div class="form-group text-center">
                <form action="{{ path('app_stock_new') }}" method="GET">
                    <button type="submit" class="btn btn-success btn-custom">Create new</button>
                </form>
            </div>
            <br><br>
    </div>
</div>



<style>
    .custom-table {
        max-height: 200px; /* Définir une hauteur maximale pour la table */
        width: 150%; /* Définir la largeur de la table à 100% */
        border-collapse: collapse; /* Fusionner les bordures des cellules */
        overflow-y: auto; /* Activer le défilement vertical si la table dépasse la hauteur maximale */
    }

    .custom-table col {
        resize: horizontal; /* Autoriser le redimensionnement horizontal */
        min-width: 50px; /* Largeur minimale pour chaque colonne */
        max-width: 300px; /* Largeur maximale pour chaque colonne */
    }

    .custom-table th,
    .custom-table td {
        padding: 10px; /* Padding des cellules */
        text-align: left; /* Alignement du texte à gauche */
        border: 1px solid #ddd; /* Bordures des cellules */
        white-space: nowrap; /* Empêcher le texte de se répartir sur plusieurs lignes */
    }

    .custom-table th {
        background-color:  #057077 ;
        color: white;
        text-align: center; /* Aligner le texte à gauche */
    }


    /* Custom CSS */
    .btn-custom {
        background-color: #c2fbd7;
        border-radius: 100px;
        box-shadow: rgba(44, 187, 99, .2) 0 -25px 18px -14px inset,rgba(44, 187, 99, .15) 0 1px 2px,rgba(44, 187, 99, .15) 0 2px 4px,rgba(44, 187, 99, .15) 0 4px 8px,rgba(44, 187, 99, .15) 0 8px 16px,rgba(44, 187, 99, .15) 0 16px 32px;
        color: green;
        cursor: pointer;
        display: inline-block;
        font-family: CerebriSans-Regular,-apple-system,system-ui,Roboto,sans-serif;
        padding: 7px 20px;
        text-align: center;
        text-decoration: none;
        transition: all 250ms;
        border: 0;
        font-size: 16px;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
    }


    .btn-custom:hover {
        box-shadow: rgba(44,187,99,.35) 0 -25px 18px -14px inset,rgba(44,187,99,.25) 0 1px 2px,rgba(44,187,99,.25) 0 2px 4px,rgba(44,187,99,.25) 0 4px 8px,rgba(44,187,99,.25) 0 8px 16px,rgba(44,187,99,.25) 0 16px 32px;
        transform: scale(1.05) rotate(-1deg);
    }
    .container3 {
        display: flex;
        justify-content: center; /* Centrer horizontalement */
        align-items: center; /* Centrer verticalement */
        height: 50vh; /* Assurez-vous que le conteneur parent occupe toute la hauteur de la fenêtre */
        width: 75%;
    }
    .container2 {
        display: flex;
        justify-content: center; /* Centrer horizontalement */
        align-items: center; /* Centrer verticalement */
        height: 100vh; /* Assurez-vous que le conteneur parent occupe toute la hauteur de la fenêtre */

    }

    .card {
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 80%;
    }
</style>


{% endblock %}
