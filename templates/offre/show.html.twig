<!DOCTYPE html>

<title>Offre</title>

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ offre.montant }}</td>
            </tr>
            <tr>
                <th>DateSoumission</th>
                <td>{{ offre.dateSoumission ? offre.dateSoumission|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offre.description }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ offre.etat }}</td>
            </tr>
            <tr>
                <th>EtatPayment</th>
                <td>{{ offre.etatPayment }}</td>
            </tr>
            <tr>
                <th>DatePayment</th>
                <td>{{ offre.datePayment ? offre.datePayment|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_offre_index') }}">back to list</a>

    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}">edit</a>

    {{ include('offre/_delete_form.html.twig') }}
{% endblock %}
